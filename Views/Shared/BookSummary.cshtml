

<!--Importing model-->

@model Library

<!--Displaying all the books in columns and rows of cards-->
<div class="col-sm-4">
    <div class="card" style="background-color: lightgray">
        <div class="card-header bg-warning">
            <span class="badge badge-warning" style="float:right">Pages: @Model.NumPages</span>
            <h4>@Model.BookId: @Model.Title</h4>
        </div>
        <div class="card-body">

            <p>By: @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</p>
            <p>Published By: @Model.Publisher</p>
            <p>ISBN: @Model.Isbn</p>
            <p>Classification: @Model.Classification</p>
            <p>Category: @Model.Category</p>
            <p>Price: $@Model.Price</p>


        </div>
        @*Adding buy button and putting it in the card*@

        <form id="@Model.BookId" asp-page="/Donate" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Buy Now
                </button>
            </span>

        </form>
    </div>
   
    <br />
</div>
<br />