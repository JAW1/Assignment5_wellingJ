@page
@model Assignment5_wellingJ.Pages.DonateModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th><th>Quantity</th><th>Price</th><th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var line in Model.Cart.Lines)
        {
        <tr>
            <td class="text-left">@line.Library.Title</td>
            <td class="text-center">@line.Quantity</td>
            <td class="text-right">@(line.Price.ToString("c"))</td>
            <td class="text-right">@((line.Quantity * line.Price).ToString("c"))</td>
            <td class="text-center">
                <form asp-page-handler="Remove" method="post">
                    <input type="hidden" name="BookId"
                           value="@line.Library.BookId" />
                    <input type="hidden" name="returnUrl"
                           value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Remove
                    </button>
                </form>
            </td>

        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-right" colspan="3">Total:</td>
            <td class="text-right">@Model.Cart.ComputeTotalSum().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-warning" href="@Model.ReturnUrl">Continue Shopping</a>
</div>
